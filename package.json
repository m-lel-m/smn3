{
  "name": "nexus_script_template",
  "version": "0.0.0",
  "description": "Template for nexus scripts using typescript",
  "author": "keneanung <keneanung@gmail.com>",
  "license": "MIT",
  "repository": "git://github.com/keneanung/iron-realms-nexus-script-template.git",
  "main": "lib/index.js",
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/plugin-transform-modules-commonjs": "^7.21.5",
    "@babel/preset-env": "^7.22.4",
    "@keneanung/iron-realms-nexus-typings": "^0.3.0",
    "@keneanung/nexus-package-builder": "^1.3.1",
    "@stryker-mutator/core": "^6.4.2",
    "@stryker-mutator/jest-runner": "^6.4.2",
    "@types/jest": "^28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "acorn": "^8.8.2",
    "babel-loader": "^9.1.2",
    "babel-plugin-react-native-web": "^0.19.4",
    "core-js": "^3.30.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^46.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-webpack-plugin": "^4.0.1",
    "jest": "^28.1.3",
    "jest-github-reporter": "^1.1.1",
    "metro-react-native-babel-preset": "^0.76.5",
    "prettier": "^2.8.8",
    "regenerator-runtime": "^0.13.11",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-auto-inject-version-next": "^1.2.4",
    "webpack-cli": "^5.1.1",
    "webpack-dev-server": "^4.15.0",
    "write-pkg": "^5.1.0"
  },
  "scripts": {
    "serve": "webpack serve --mode development",
    "build": "tsc",
    "webpack": "npm test && webpack build --mode development",
    "webpackProd": "npm test && webpack build --mode production",
    "lint": "eslint . --ext .ts",
    "test": "jest --testLocationInResults --collect-coverage --config jestconfig.json",
    "watchTest": "jest --collect-coverage --config jestconfig.json --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.ts\"",
    "prepublishOnly": "npm test && npm run lint && npm run build",
    "preversion": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "website": "cd website && npm run start",
    "setup": "node ./setup.mjs",
    "nxs": "npm run webpackProd && nexus-package-builder nxs/Greeter.yaml nxs/"
  },
  "files": [
    "lib/**/*",
    "!lib/**/__tests__/*",
    "!lib/webpack/**/*"
  ]
}
